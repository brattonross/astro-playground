---
import PButton, { type ButtonColor, type ButtonVariant } from "./Button.astro";

const colors: Array<{ label: string; value: ButtonColor }> = [
	{
		label: "Primary",
		value: "primary",
	},
	{
		label: "Warning",
		value: "warning",
	},
	{
		label: "Danger",
		value: "danger",
	},
	{
		label: "Gray",
		value: "gray",
	},
];
const variants: Array<{ label: string; value: ButtonVariant }> = [
	{
		label: "Solid",
		value: "solid",
	},
	{
		label: "Soft",
		value: "soft",
	},
	{
		label: "Surface",
		value: "surface",
	},
	{
		label: "Outline",
		value: "outline",
	},
	{
		label: "Ghost",
		value: "ghost",
	},
];
---

<table
	class="[&_th]:text-grayA-11 [&_td:first-child]:text-grayA-11 border-collapse [&_td:first-child]:min-w-[4rem] [&_td:first-child]:text-xs [&_td]:pb-4 [&_td]:pr-4 [&_td]:text-center [&_th]:pb-4 [&_th]:pr-4 [&_th]:text-center [&_th]:text-xs"
>
	<thead>
		<tr>
			<th></th>
			{colors.map((color) => <th>{color.label}</th>)}
			<th>Disabled</th>
		</tr>
	</thead>
	<tbody>
		{
			variants.map((variant) => (
				<tr>
					<td>{variant.label}</td>
					{colors.map((color) => (
						<td>
							<PButton
								color={color.value}
								variant={variant.value}
							>
								Next
								<svg
									width="16"
									height="16"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path d="M18 8L22 12L18 16" />
									<path d="M2 12H22" />
								</svg>
							</PButton>
						</td>
					))}
					<td>
						<PButton
							color="primary"
							variant={variant.value}
							disabled
						>
							Next
							<svg
								width="16"
								height="16"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<path d="M18 8L22 12L18 16" />
								<path d="M2 12H22" />
							</svg>
						</PButton>
					</td>
				</tr>
			))
		}
	</tbody>
</table>
