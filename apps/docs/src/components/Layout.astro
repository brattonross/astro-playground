---
import { Layout as PlaygroundLayout } from "@brattonross/astro-playground/components";
import "~/main.css";
---

<PlaygroundLayout>
	<Fragment slot="head">
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link
			rel="preload"
			href="/fonts/Geist-Regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/Geist-Medium.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<title>Astro Playground</title>
	</Fragment>
	<slot />
</PlaygroundLayout>
